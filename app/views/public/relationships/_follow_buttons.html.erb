<% if current_customer.following?(customer) %>
  <%= link_to "フォロー中", customer_relationships_path(customer), method: :delete, class: "btn btn-sm btn-primary", "data-confirm" => "フォロー外しますか？", remote: true %>
<% else %>
  <%= link_to "フォローする", customer_relationships_path(customer), method: :post, class: "btn btn-sm btn-secondary", remote: true %>
<% end %>